{
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://wac-cdn.atlassian.com/dam/jcr:e2a6f06f-b3d5-4002-aed3-73539c56a2eb/bitbucket_rgb_blue.png",
                  "size": "Medium",
                  "style": "Default",
                  "spacing": "None"
                }
              ],
              "verticalContentAlignment": "Center"
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{triggerBody()?['title']}",
                  "weight": "Bolder",
                  "size": "Large",
                  "wrap": true,
                  "color": "@{if(equals(triggerBody()?['theme_color'], '#DC3545'), 'Attention', if(equals(triggerBody()?['theme_color'], '#28A745'), 'Good', if(equals(triggerBody()?['theme_color'], '#FFC107'), 'Warning', 'Accent')))}",
                  "spacing": "Small"
                }
              ],
              "verticalContentAlignment": "Center"
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{if(equals(triggerBody()?['event_category'], 'pull_request'), 'üîÄ', if(equals(triggerBody()?['event_category'], 'push'), 'üì§', if(equals(triggerBody()?['event_category'], 'comment'), 'üí¨', if(equals(triggerBody()?['event_category'], 'commit_status'), 'üîß', 'üìã'))))}",
                  "size": "Large",
                  "spacing": "None"
                }
              ],
              "verticalContentAlignment": "Center"
            }
          ]
        }
      ],
      "bleed": true
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "@{triggerBody()?['subtitle']}",
          "isSubtle": true,
          "wrap": true,
          "spacing": "Medium",
          "size": "Medium",
          "style": "emphasis"
        }
      ],
      "spacing": "Medium",
      "$when": "@{not(empty(triggerBody()?['subtitle']))}"
    },
    {
      "type": "Container",
      "style": "default",
      "items": [
        {
          "type": "TextBlock",
          "text": "üìä **Event Details**",
          "weight": "Bolder",
          "size": "Medium",
          "color": "Accent",
          "spacing": "Medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "üèõÔ∏è Repository",
              "value": "@{triggerBody()?['repository']}"
            },
            {
              "title": "‚ö° Event",
              "value": "@{triggerBody()?['action']}"
            },
            {
              "title": "üë§ Author",
              "value": "@{triggerBody()?['author']}"
            }
          ],
          "spacing": "Small"
        }
      ],
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "style": "good",
      "items": [
        {
          "type": "TextBlock",
          "text": "üîÄ **Pull Request Details**",
          "weight": "Bolder",
          "size": "Medium",
          "color": "Good",
          "spacing": "Medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "üÜî PR ID",
              "value": "@{triggerBody()?['pr_id']}"
            },
            {
              "title": "üåø Source ‚Üí Target",
              "value": "@{triggerBody()?['branch_flow']}"
            },
            {
              "title": "üìä State",
              "value": "@{triggerBody()?['state']}"
            }
          ],
          "spacing": "Small"
        }
      ],
      "spacing": "Medium",
      "$when": "@{equals(triggerBody()?['event_category'], 'pull_request')}"
    },
    {
      "type": "Container",
      "style": "attention",
      "items": [
        {
          "type": "TextBlock",
          "text": "üì§ **Push Details**",
          "weight": "Bolder",
          "size": "Medium",
          "color": "Attention",
          "spacing": "Medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "üåø Branch",
              "value": "@{triggerBody()?['branch']}"
            },
            {
              "title": "üìù Commits",
              "value": "@{triggerBody()?['commit_count']}"
            }
          ],
          "spacing": "Small"
        },
        {
          "type": "Container",
          "style": "emphasis",
          "items": [
            {
              "type": "TextBlock",
              "text": "üìã **Recent Commits:**",
              "weight": "Bolder",
              "size": "Small",
              "color": "Default",
              "spacing": "Medium"
            },
            {
              "type": "TextBlock",
              "text": "@{triggerBody()?['commit_details']}",
              "wrap": true,
              "size": "Small",
              "spacing": "Small",
              "fontType": "Monospace"
            }
          ],
          "spacing": "Small",
          "$when": "@{not(empty(triggerBody()?['commit_details']))}"
        }
      ],
      "spacing": "Medium",
      "$when": "@{equals(triggerBody()?['event_category'], 'push')}"
    },
    {
      "type": "Container",
      "style": "warning",
      "items": [
        {
          "type": "TextBlock",
          "text": "üí¨ **Comment Details**",
          "weight": "Bolder",
          "size": "Medium",
          "color": "Warning",
          "spacing": "Medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "üìç Context",
              "value": "@{triggerBody()?['context_title']}"
            }
          ],
          "spacing": "Small"
        },
        {
          "type": "Container",
          "style": "emphasis",
          "items": [
            {
              "type": "TextBlock",
              "text": "üí≠ **Comment:**",
              "weight": "Bolder",
              "size": "Small",
              "color": "Default",
              "spacing": "Medium"
            },
            {
              "type": "TextBlock",
              "text": "@{triggerBody()?['description']}",
              "wrap": true,
              "size": "Medium",
              "spacing": "Small",
              "style": "emphasis",
              "fontType": "Default"
            }
          ],
          "spacing": "Small",
          "$when": "@{not(empty(triggerBody()?['description']))}"
        }
      ],
      "spacing": "Medium",
      "$when": "@{equals(triggerBody()?['event_category'], 'comment')}"
    },
    {
      "type": "Container",
      "style": "accent",
      "items": [
        {
          "type": "TextBlock",
          "text": "üîß **Build Status**",
          "weight": "Bolder",
          "size": "Medium",
          "color": "Accent",
          "spacing": "Medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "üèóÔ∏è Build",
              "value": "@{triggerBody()?['build_name']}"
            },
            {
              "title": "üìä Status",
              "value": "@{triggerBody()?['build_status']}"
            },
            {
              "title": "üîó Commit",
              "value": "@{triggerBody()?['commit_hash']}"
            }
          ],
          "spacing": "Small"
        },
        {
          "type": "Container",
          "style": "emphasis",
          "items": [
            {
              "type": "TextBlock",
              "text": "@{triggerBody()?['description']}",
              "wrap": true,
              "size": "Medium",
              "isSubtle": true,
              "spacing": "Small"
            }
          ],
          "spacing": "Small",
          "$when": "@{not(empty(triggerBody()?['description']))}"
        }
      ],
      "spacing": "Medium",
      "$when": "@{equals(triggerBody()?['event_category'], 'commit_status')}"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "üîó View in Bitbucket",
      "url": "@{triggerBody()?['url']}",
      "style": "positive"
    }
  ],
  "msteams": {
    "width": "Full"
  },
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "$when": "@{not(empty(triggerBody()?['url']))}"
}