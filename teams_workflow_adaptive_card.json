{
  "type": "AdaptiveCard",
  "version": "1.4",
  "msteams": {
    "entities": "@{triggerBody()?['mention_entities']}"
  },
  "body": [
    {
      "type": "Container",
      "style": "default",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "üîß **Pipeline Status**",
                  "weight": "Bolder",
                  "size": "Large",
                  "wrap": true,
                  "color": "Accent"
                },
                {
                  "type": "TextBlock",
                  "text": "@{triggerBody()?['title']}",
                  "weight": "Default",
                  "size": "Medium",
                  "wrap": true,
                  "color": "@{if(equals(triggerBody()?['theme_color'], '#DC3545'), 'Attention', if(equals(triggerBody()?['theme_color'], '#28A745'), 'Good', if(equals(triggerBody()?['theme_color'], '#FFC107'), 'Warning', 'Default')))}",
                  "spacing": "Small"
                }
              ],
              "verticalContentAlignment": "Center"
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{if(equals(triggerBody()?['theme_color'], '#28A745'), '‚úÖ', if(equals(triggerBody()?['theme_color'], '#DC3545'), '‚ùå', if(equals(triggerBody()?['theme_color'], '#FFC107'), '‚ö†Ô∏è', 'üîÑ')))}",
                  "size": "ExtraLarge",
                  "horizontalAlignment": "Center"
                }
              ],
              "verticalContentAlignment": "Center"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Repository",
              "value": "@{triggerBody()?['repository']}"
            },
            {
              "title": "Branch",
              "value": "@{triggerBody()?['branch']}"
            },
            {
              "title": "Pipeline",
              "value": "@{triggerBody()?['build_name']}"
            },
            {
              "title": "Triggered by",
              "value": "@{if(equals(triggerBody()?['author'], 'System'), 'Automated Pipeline', coalesce(triggerBody()?['author_mention'], triggerBody()?['author']))}"
            },
            {
              "title": "Status",
              "value": "@{triggerBody()?['build_status']}"
            }
          ]
        }
      ],
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "@{if(equals(triggerBody()?['build_status'], 'FAILED'), concat('üö® ', coalesce(triggerBody()?['author_mention'], triggerBody()?['author']), ' - Click \"View Pipeline\" below to see detailed error logs and failure information.'), coalesce(triggerBody()?['subtitle'], triggerBody()?['description']))}",
          "wrap": true,
          "size": "Default",
          "isSubtle": true
        }
      ],
      "spacing": "Medium"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "@{if(equals(triggerBody()?['build_status'], 'FAILED'), 'üîç View Pipeline Logs', 'üìã View Pipeline')}",
      "url": "@{triggerBody()?['url']}"
    }
  ]
}