{
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "Container",
      "style": "default",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://wac-cdn.atlassian.com/dam/jcr:e2a6f06f-b3d5-4002-aed3-73539c56a2eb/bitbucket_rgb_blue.png",
                  "size": "Small",
                  "style": "Default"
                }
              ],
              "verticalContentAlignment": "Center"
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "üîß **Pipeline Status**",
                  "weight": "Bolder",
                  "size": "Large",
                  "wrap": true,
                  "color": "Accent"
                },
                {
                  "type": "TextBlock",
                  "text": "@{triggerBody()?['title']}",
                  "weight": "Default",
                  "size": "Medium",
                  "wrap": true,
                  "color": "@{if(equals(triggerBody()?['theme_color'], '#DC3545'), 'Attention', if(equals(triggerBody()?['theme_color'], '#28A745'), 'Good', if(equals(triggerBody()?['theme_color'], '#FFC107'), 'Warning', 'Default')))}",
                  "spacing": "Small"
                }
              ],
              "verticalContentAlignment": "Center"
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "@{if(equals(triggerBody()?['theme_color'], '#28A745'), '‚úÖ', if(equals(triggerBody()?['theme_color'], '#DC3545'), '‚ùå', if(equals(triggerBody()?['theme_color'], '#FFC107'), '‚ö†Ô∏è', 'üîÑ')))}",
                  "size": "ExtraLarge",
                  "horizontalAlignment": "Center"
                }
              ],
              "verticalContentAlignment": "Center"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Repository",
              "value": "@{triggerBody()?['repository']}"
            },
            {
              "title": "Branch",
              "value": "@{coalesce(triggerBody()?['branch'], if(not(empty(triggerBody()?['branch_flow'])), triggerBody()?['branch_flow'], 'main'))}"
            },
            {
              "title": "Pipeline",
              "value": "@{coalesce(triggerBody()?['build_name'], triggerBody()?['action'], 'Build')}"
            },
            {
              "title": "Triggered by",
              "value": "@{if(equals(triggerBody()?['author'], 'SYSTEM'), concat('System (', coalesce(triggerBody()?['event_category'], 'automated'), ')'), triggerBody()?['author'])}"
            },
            {
              "title": "Status",
              "value": "@{coalesce(triggerBody()?['build_status'], triggerBody()?['state'], triggerBody()?['action'])}"
            }
          ]
        }
      ],
      "spacing": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "@{coalesce(triggerBody()?['subtitle'], triggerBody()?['description'])}",
          "wrap": true,
          "size": "Default",
          "isSubtle": true
        }
      ],
      "spacing": "Medium"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "View Details",
      "url": "@{triggerBody()?['url']}"
    }
  ]
}